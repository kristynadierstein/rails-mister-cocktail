<h1>This is the list of cocktails:</h1>

<ul>
  <%@cocktails.each do |cocktail|%>
  <li><%= link_to cocktail.name, cocktail_path(cocktail) %>
    <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt">remove</i>
    <% end %>
  </li>
  <%end  %>
</ul>


<%= link_to "Add new cocktail", new_cocktail_path %>


